
<header class="mb-24">
    <nav class="bg-transparent ">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo -->
                <a class="text-white text-xl font-bold text-gray-800" asp-controller="Home" asp-action="Index">
                    LearCMS
                </a>

                <!-- Botón responsive -->
                <button class="sm:hidden p-2 text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
                        type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>

                <!-- Menú principal -->
                <div class="hidden sm:block sm:ml-6" id="navbarSupportedContent">
                    <ul class="flex space-x-4 items-center">

                        <!-- Home -->
                        <li>
                            <a class="text-gray-600 hover:text-gray-800 px-3 py-2 text-sm font-medium"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Cart -->
                        <li id="cart-item-container">
                            @await Component.InvokeAsync("Cart")
                        </li>

                        <!-- Si el usuario está logueado y es Admin -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <!-- Product visible solo para admin -->
                            <li>
                                <a class="text-gray-600 hover:text-gray-800 px-3 py-2 text-sm font-medium"
                                   asp-controller="Product" asp-action="Index">Product</a>
                            </li>

                            <!-- Logout -->
                            <li>
                                <form asp-controller="Admin" asp-action="Logout" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="text-red-600 hover:text-red-800 px-3 py-2 text-sm font-medium">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

</header>







