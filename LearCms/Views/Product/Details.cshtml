@model LearCms.DTOs.ProductDto

@{
    ViewData["Title"] = "Product Details";

    string stockClass = Model.Stock switch
    {
        > 20 => "bg-green-500 text-white",
        > 5 => "bg-yellow-400 text-gray-800",
        > 0 => "bg-orange-500 text-white",
        _ => "bg-red-600 text-white"
    };

    string stockText = Model.Stock switch
    {
        > 20 => "High Stock",
        > 5 => "Medium Stock",
        > 0 => "Low Stock",
        _ => "Out of Stock"
    };
}

<div class="max-w-4xl mx-auto p-6">
    <div class="flex flex-col md:flex-row bg-white dark:bg-gray-800 rounded-xl shadow-xl overflow-hidden">
        <!-- Imagen del producto -->
        <div class="md:w-1/3 bg-gray-100 dark:bg-gray-700 flex items-center justify-center p-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="object-cover rounded-lg shadow-md max-h-80 md:max-h-full" />
            }
            else
            {
                <div class="flex items-center justify-center w-full h-64 md:h-full bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg">
                    No Image
                </div>
            }
        </div>

        <!-- Información del producto -->
        <div class="md:w-2/3 p-6 flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">@Model.Name</h1>
                <h4 class="text-gray-700 dark:text-gray-300 mb-4">@Model.Description</h4>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                    <div>
                        <span class="font-semibold text-gray-600 dark:text-gray-300">Price:</span>
                        <span class="text-xl font-bold text-sky-600 dark:text-sky-400 ml-1">$@Model.Price</span>
                    </div>

                    <div>
                        <span class="font-semibold text-gray-600 dark:text-gray-300">Stock:</span>
                        <span class="ml-1 px-2 py-1 rounded-full text-sm font-medium @stockClass">
                            @Model.Stock units
                            <small class="ml-1 text-xs font-normal">(@stockText)</small>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="flex flex-col sm:flex-row gap-3 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.ProductId"
                   class="flex items-center justify-center px-6 py-3 bg-gradient-to-r from-sky-500 to-blue-700 text-white font-semibold rounded-lg shadow-md hover:from-sky-600 hover:to-blue-800 transition-all">
                    ✏️ Edit
                </a>

                <a asp-action="Index"
                   class="flex items-center justify-center px-6 py-3 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-gray-200 font-medium rounded-lg shadow-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-all">
                    ← Back
                </a>
            </div>
        </div>
    </div>
</div>
