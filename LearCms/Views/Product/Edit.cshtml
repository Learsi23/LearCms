@model LearCms.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Producto</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @* CLAVE: enctype="multipart/form-data" para subir el archivo *@
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Campos Ocultos para mantener ID y URL existente *@
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ExistingImageUrl" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <hr />

            <div class="form-group">
                <label asp-for="NewImageFile" class="control-label">Reemplazar Imagen</label>
                <input asp-for="NewImageFile" type="file" class="form-control" />
                <span asp-validation-for="NewImageFile" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
            {
                <div class="mt-3">
                    <h6>Imagen Actual:</h6>
                    <img src="@Model.ExistingImageUrl" alt="Imagen actual" style="max-width: 200px; height: auto;" />
                </div>
            }

            <div class="form-group mt-4">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}